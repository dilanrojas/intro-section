---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100..900;1,100..900&display=swap');

	:root {
		--clr-off-white: hsl(0, 0%, 98%);
		--clr-medium-gray: hsl(0, 0%, 41%);
		--clr-off-black: hsl(0, 0%, 8%);

		--fs-100: .25rem;
		--fs-150: .40rem;
		--fs-200: .50rem;
		--fs-250: .75rem;
		--fs-300: .8rem;
		--fs-350: .9rem;
		--fs-400: 1rem;
		--fs-450: 1.125rem;
		--fs-500: 1.25rem;
		--fs-550: 1.4rem;
		--fs-600: 1.6rem;
		--fs-650: 1.7rem;
		--fs-700: 2rem;
		--fs-750: 2.2rem;
		--fs-800: 2.5rem;
		--fs-850: 4rem;
		--fs-900: 4.5rem;
		--fs-950: 5.2rem;

		--ff-html: "Epilogue", sans-serif;

		--fw-regular: 500;
		--fw-semibold: 700;
	}

	*,*::after,*::before {
		box-sizing: border-box;
	}

	* {
		margin: 0;
		padding: 0;
	}

	h1,h2,h3,h4,h5,h6 {
		line-height: 1;
	}

	html {
		font-family: var(--ff-html);
		font-size: 15px;
		scroll-behavior: smooth;
		line-height: 1.5;
		color: var(--clr-dark-blue);
	}

	body {
		background-color: var(--clr-off-white);
	}

	ul,
	ol {
		list-style-type: none;
	}
	
	a {
		text-decoration: none;
	}

	/* Utility */
	.flow > * + * {
  	margin-top: var(--flow-space, 1em);
	}
</style>
